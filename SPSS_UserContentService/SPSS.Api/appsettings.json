{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ], // Khai báo các Sink sẽ dùng
    "MinimumLevel": {
      "Default": "Information", // Mức log tối thiểu là Information
      "Override": {
        "Microsoft": "Warning", // Log của hệ thống .NET Core chỉ hiện Warning trở lên
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      // Cấu hình Sink 1: Ghi ra Console
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      // Cấu hình Sink 2: Ghi ra File
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt", // Tên file, Serilog tự thêm ngày vào
          "rollingInterval": "Day", // "Cuốn chiếu" (tạo file mới) mỗi ngày
          "fileSizeLimitBytes": 10485760, // Giới hạn 10MB mỗi file
          "retainedFileCountLimit": 31, // Giữ lại tối đa 31 file (khoảng 1 tháng)
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({SourceContext}) {Message:lj}{NewLine}{Exception}",
          "rollOnFileSizeLimit": true // Nếu file > 10MB, tạo file mới (log-001.txt)
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ] // Làm giàu log
  }
}
